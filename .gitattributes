# Auto detect text files and perform LF normalization
* text=auto

# Explicitly set line endings for specific file types

# Shell scripts must have LF line endings
*.sh text eol=lf

# PowerShell scripts can have CRLF
*.ps1 text eol=crlf

# Python files should use LF
*.py text eol=lf

# Markdown and documentation
*.md text eol=lf

# another files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sql text eol=lf
*.rst text eol=lf
*.txt text eol=lf
*.csv text eol=lf
*.tsv text eol=lf

# Configuration files
*.toml text
*.yaml text
*.yml text
*.json text
*.env text

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
